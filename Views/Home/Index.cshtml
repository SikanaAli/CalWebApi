@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Px-Scheduler</title>
    <link href='https://fonts.googleapis.com/css?family=Anton' rel='stylesheet'>
    <link href='~/lib/materialize/css/materialize.min.css' rel='stylesheet'>
    <script src="~/lib/materialize/js/materialize.min.js" type="text/javascript"></script>
    <style>
        html {
            position: relative;
            min-height: 100vh;
        }

        body {
            margin: 0;
            padding: 0;
            min-height: inherit
        }

        .main-bg {
            background: url(/images/indexblackred.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            min-height: inherit;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #container {
            width: 640px; /* Can be in percentage also. */
            height: 340px;
            margin: 0 auto;
            padding: 10px;
            position: relative;
            /*background-color: rgba(255,255,255,0.1);*/
            text-align: center
        }

        h4 {
            font-family: 'Anton';
            font-size: 4rem;
            color: #000;
            -webkit-text-stroke-width: .5px;
            -webkit-text-stroke-color: #fff;
            letter-spacing:.2rem
        }

        .row{
            padding-top:2rem;
        }
        .welcome-text{
            margin-top:0;
            color: #fff;
            font-size:2.5rem
        }
    </style>
</head>
    <body>
        <div class="main-bg">
            <div id="container">
                <h4>Px-SCHEDULER</h4>
                <div class="row">
                    <div>
                        <p class="welcome-text">Welcome to CMSB Scheduler Ver 0.1</p>
                    </div>
                    <a class="btn btn-large waves-effect" asp-action="Scheduler" asp-controller="Home"> Go to Schduler </a>
                </div>
            </div>
        </div>
    </body>
</html>

